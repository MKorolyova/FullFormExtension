{
    "name": "FullForm",
    "version": "1.0",
    "description":"Searches for slang terms or abbreviation and provides a meaning",
    "manifest_version": 3,
    "permissions": [
        "activeTab", 
        "scripting", 
        "storage" 
    ],
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": "images/RowdyHackthon.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
    {
      "matches": ["<all_urls>"], 
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ]
}
